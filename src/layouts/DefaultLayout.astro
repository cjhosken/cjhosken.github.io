---
import "../assets/scss/globals.scss"
import SiteMeta from "../components/SiteMeta.astro"
import Header from "../components/Header.astro"
import LightBox from "../components/LightBox.astro"
import Footer from "../components/Footer.astro"

const {
    title="Christopher Hosken | Generalist TD",
    description="The portfolio website for Christopher Hosken.",
    keywords="",
    author="Christopher Hosken"
} = Astro.props
---

<html lang="en" id="html">
    <head>
        <meta charset="utf-8"/>
        <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
        <meta http-equiv="X-UA-Compatable" content="ie=edge"/>


        <SiteMeta
            title={title}
            description={description.substring(0, 100)}
            keywords={keywords}
            author={author}    
        />
        <link rel="icon" type="image/svg+xml" href="/images/common/favicon.png">
    </head>
        <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-TJNZKSJSNC"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());
        gtag('config', 'G-TJNZKSJSNC');
    </script>
    <body>
        <main id="main-content">
            <LightBox/>
            <Header/>
            <slot/>
            <Footer/>
        </main>
    </body>
    <style lang="scss" is:global>
        #html.no-scroll {
            overflow-y: hidden;
            overflow-x: hidden;
        }

        #html {
            overflow-y: scroll;
            overflow-x: hidden;
        }

        main {
            background-color: var(--light-900);
            color: var(--dark-100);
        }
    </style>
</html>