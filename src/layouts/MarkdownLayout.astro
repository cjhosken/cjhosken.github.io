---
import DefaultLayout from './DefaultLayout.astro'
import Banner from '../components/Banner.astro'

const { title = "Title", img = "/images/common/banner_contact.png"} = Astro.props;

---

<DefaultLayout>
  <Banner title={title} img={img}/>
  <div class="container">
    <div class="space-content my-12">
      <slot />
    </div>
  </div>
</DefaultLayout>
<style lang="scss" is:global>
    .container {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        margin-top: 20vh;
        color: white;
        background-color: var(--light-900);
    }
</style>