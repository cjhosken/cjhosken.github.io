    <section class="my-12">
      <h1> OTHER </h1>
      <div class="container">
          {
            other.map((post) => (
                <Card
                  file={post.id}
                  url={
                    post.data.title.replaceAll(" ", "_").toLowerCase()
                  }
                  title={post.data.title}
                  date={post.data.date}
                  role={post.data.role}
                  img={post.data.img}
                  excerpt={post.data.excerpt}
                >
                </Card>
            ))
          }
      </div>
    </section>
    <Button text="See More" icon="mdi:artstation" url="https://www.artstation.com/cjhosken"/>
  </div>
</DefaultLayout>
