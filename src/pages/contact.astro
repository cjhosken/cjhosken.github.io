---
import Layout from "../layouts/Layout.astro";
import ContactForm from "../components/ContactForm.astro";
import Map from "../components/Map.astro";
import "@material/web/button/filled-button.js";
import { Icon } from "astro-icon/components";

const primaryKeywords = [
  "Christopher Hosken",
  "Chris Hosken",
  "Generalist TD",
  "CG Generalist",
  "VFX Generalist",
  "Technical Director",
  "3D Technical Director",
  "FX Technical Director",
  "Pipeline Technical Director",
  "Bournemouth University",
  "Computer Animation Technical Arts",
  "Chiang Mai International School",
  "Bournemouth",
  "UK",
  "Thailand",
  "Chiang Mai",
  "Christopher Hosken Portfolio",
  "Chris Hosken TD",
  "Chris Hosken VFX",
  "Christopher Hosken Generalist",
];

const secondaryKeywords = ["Contact", "CV", "Job", "Resume", "Hire", "Work"];

const pageMetadata = {
  keywords: [...primaryKeywords, ...secondaryKeywords],
  title: "Contact",
  description: "Get in contact with me.",
  image: "/images/seo-homepage.jpg",
};
---

<Layout metadata={pageMetadata}>
  <div class="contact-container container">
    <div class="contact-header header">
      <h1>Contact</h1>
      <p>
        Feel free to get in touch using the form below or reach out to me at
        hoskenchristopher@gmail.com or LinkedIn.
      </p>
    </div>
    <div class="contact-map">
      <Map />
    </div>
    <ContactForm />
  </div>
</Layout>

<style is:global>
  .contact-header::before {
    background: url("/images/contact-background.png") no-repeat center center;
  }

  .contact-title {
    color: var(--md-sys-color-primary);
    margin-bottom: 2rem;
    text-align: center;
  }

  .contact-content {
    margin: 0 auto;
    max-width: 1200px;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
    align-items: start;
  }

  .contact-info {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    background: var(--md-sys-color-surface-container-low);
    padding: 2rem;
    border-radius: 12px;
  }

  .contact-item {
    display: flex;
    gap: 1rem;
    align-items: flex-start;
  }

  .contact-item h2 {
    margin: 0 0 0.5rem 0;
    font-size: 1.1rem;
    color: var(--md-sys-color-on-surface);
  }

  .contact-item p {
    margin: 0;
    color: var(--md-sys-color-on-surface-variant);
  }

  .contact-map {
    height: 400px;
    background: var(--md-sys-color-surface-container-high);
    border-radius: 12px;
    overflow: hidden;
  }

  @media (max-width: 768px) {
    .contact-content {
      grid-template-columns: 1fr;
      justify-content: center;
    }

    .contact-map {
      order: -1;
    }

    /* Add these new rules */
    .contact-info {
      align-items: center;
      text-align: center;
    }

    .contact-item {
      flex-direction: column;
      align-items: center;
      gap: 0.5rem;
    }

    .contact-item > div {
      display: flex;
      flex-direction: column;
      align-items: center;
    }
  }
</style>
