---
import Layout from '../layouts/Layout.astro';
import ContactForm from '../components/ContactForm.astro';
import Map from '../components/Map.astro';
import '@material/web/button/filled-button.js';
import { Icon } from 'astro-icon/components';

const primaryKeywords = [
  'Christopher Hosken', 'Chris Hosken',
  'Generalist TD', "CG Generalist", "VFX Generalist",
  'Technical Director', '3D Technical Director', "FX Technical Director", "Pipeline Technical Director",
  'Bournemouth University', 'Computer Animation Technical Arts', "Chiang Mai International School",
  "Bournemouth", "UK", "Thailand", "Chiang Mai",
  'Christopher Hosken Portfolio', 'Chris Hosken TD', 'Chris Hosken VFX', "Christopher Hosken Generalist",
];

const secondaryKeywords = [
  "Contact", "CV", "Job", "Resume", "Hire", "Work"
];

const pageMetadata = {
  keywords: [...primaryKeywords, ...secondaryKeywords],
  title:"Contact",
  description: "Get in contact with me.",
  image: '/images/seo-homepage.jpg'
};
---

<Layout metadata={pageMetadata}>
  <main class="contact-container">
    <h1 class="contact-title">Contact</h1>
    
    <div class="contact-content">
      <div class="contact-info">
        <div class="contact-item">
          <Icon name="mdi:email" size="24" />
          <div>
            <h2>Email</h2>
            <a href="mailto:hoskenchristopher@gmail.com" class="md-button">hoskenchristopher@gmail.com</a>
          </div>
        </div>
        
        <div class="contact-item">
          <Icon name="mdi:map-marker" size="24" />
          <div>
            <h2>Location</h2>
            <a href="https://maps.app.goo.gl/MKvBbA925MdXYqBv9" target="_blank" class="md-button">Bournemouth, UK</a>
          </div>
        </div>
        
        <div class="contact-item">
          <Icon name="mdi:file-download" size="24" />
          <div>
            <h2>Download CV</h2>
            <md-filled-button>
              <a href="/ChristopherHosken_CurriculumVitae_2025.pdf" target="_blank" download="ChristopherHosken_CurriculumVitae_2025.pdf" class="md-button">Curriculum Vitae</a>
            </md-filled-button>
          </div>
        </div>
      </div>
      
      <div class="contact-map">
        <Map></Map>
      </div>
    </div>
    <ContactForm />
  </main>

  <style is:global>
    .contact-container {
      max-width: 1200px;
      margin: 2rem auto;
      padding: 0 1rem;
    }
    
    .contact-title {
      color: var(--md-sys-color-primary);
      margin-bottom: 2rem;
      text-align: center;
    }
    
    .contact-content {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 2rem;
      align-items: start;
    }
    
    .contact-info {
      display: flex;
      flex-direction: column;
      gap: 2rem;
      background: var(--md-sys-color-surface-container-low);
      padding: 2rem;
      border-radius: 12px;
    }
    
    .contact-item {
      display: flex;
      gap: 1rem;
      align-items: flex-start;
    }
    
    .contact-item h2 {
      margin: 0 0 0.5rem 0;
      font-size: 1.1rem;
      color: var(--md-sys-color-on-surface);
    }
    
    .contact-item p {
      margin: 0;
      color: var(--md-sys-color-on-surface-variant);
    }
    
    .contact-map {
      height: 400px;
      background: var(--md-sys-color-surface-container-high);
      border-radius: 12px;
      overflow: hidden;
    }

    
    @media (max-width: 768px) {
  .contact-content {
    grid-template-columns: 1fr;
    justify-content: center;
  }
  
  .contact-map {
    order: -1;
  }
  
  /* Add these new rules */
  .contact-info {
    align-items: center;
    text-align: center;
  }
  
  .contact-item {
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
  }
  
  .contact-item > div {
    display: flex;
    flex-direction: column;
    align-items: center;
  }
}
  </style>
</Layout>