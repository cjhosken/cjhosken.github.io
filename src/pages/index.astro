<style is:global>
#hero {
  position: relative;
  width: 100vw;
  height: 100vh;
}

#hero #backdrop {
  position: absolute;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  object-fit: cover;
  z-index: 0;
}

#hero #cover {
  position: absolute;
  color: white;
  text-align: left;
  top: 20%;
  left: 5%;
  display: flex;
  flex-direction: column;
}

#cover h1 {
  font-size: 8rem; /* default (desktop) */
}

#cover p {
  margin: 0;
  font-size: 3rem;
}

/* Mobile styles */
@media (max-width: 768px) {
  #cover h1 {
    font-size: 15vw; /* smaller on mobile */
  }

  #cover p {
    font-size: 5vw;
  }
}

#cover button {
  width: 16rem !important;
  height: 3.5rem !important;
  margin-top: 1rem;
}

#hero #icon-bar {
  position: absolute;
  bottom: 0;
  right: 0;
  margin: 2rem;
  display: flex;
  flex-direction: row;
  gap: 1.5rem;
}

/* About Section */
#about {
  padding: 3rem 2rem;
  background-color: #242424;
  box-shadow: 0px 0px 5rem rgba(0, 0, 0, 0.5);
}

.about-container {
  display: flex;
  flex-direction: row;
  justify-content: center;
  flex-wrap: wrap;
  text-align: center;
  gap: 1rem;
  max-width: 100%;
  align-items: center;
  margin: 0 auto;
}

#info {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    width: 60%;
}

#info p {
    font-size: 1.25rem;
}

.headshot {
  margin: 2rem;
  width: 15rem;
  height: 15rem;
  border-radius: 50%;
  object-fit: cover;
  box-shadow: 0 4px 10px rgba(0,0,0,0.2);
}

@media (max-width: 768px) {
  .about-container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
  }

  #info {
    width: 80%;
  }

  #info p {
      font-size: 1.2rem;
  }
}

#features {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  gap: 1rem;
  padding: 3rem 0rem;
}

#features .container {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  flex-wrap: wrap;
  align-items: center;
  gap: 5rem;
  padding: 3rem 0rem;
}

.feature {
  width: 15rem;
  max-height: 28rem;
  padding: 2rem;
  
  text-align: center;
  background-color: #242424;
  border-radius: 16px;
  box-shadow: 0 4px 10px rgba(0,0,0,0.2);
  border: solid transparent 2px;
  transition: all ease 0.3s;
  cursor: pointer;
}

.feature:hover {
  box-shadow: 0px 0px 2rem rgba(0, 0, 0, 0.25);
  border: solid var(--primary-color) 2px;
  background-color: rgb(95, 27, 55);
  transform: scale(1.05);
  color: white;
}

.feature h1 {
  font-size: 3rem;
}

.feature p {
  font-size: 1.25rem;
}

.button {
  background-color: var(--primary-color);
  color: white;
  border: solid 2px transparent;
  padding: 1rem 4rem;
  font-size: 1.2rem;
  border-radius: 16px;
  cursor: pointer;
  transition: all ease 0.3s;
}

.button:hover {
  background-color: transparent;
  color: var(--primary-color);
  transform: scale(1.05);
  border: solid 2px var(--primary-color);
}

/* MOBILE FIX FOR EXPERIENCE + EDUCATION */
@media (max-width: 768px) {
  #history {
    flex-direction: column;
    align-items: center;
    padding: 2rem 1rem;
  }

  .history-container {
    width: 100%;
    padding: 1.5rem 1rem;
    margin: 0;
  }

  .history-container .experience {
    font-size: clamp(1.3rem, 5vw, 2rem);
  }

  .timeline {
    width: 100%;
  }

  .timeline li {
    margin: 1rem 0;
    padding: 1.25rem;
    min-width: 0;
    width: 100%;
    min-height: auto;
  }

  .timeline li img {
    width: 3rem;
  }

  .timeline li .header h1 {
    font-size: clamp(1.2rem, 5vw, 1.8rem);
  }

  .timeline li .header h2 {
    font-size: clamp(0.9rem, 4vw, 1.3rem);
  }

  .timeline li #date,
  .timeline li #description {
    font-size: clamp(0.9rem, 4vw, 1.2rem);
  }
}

#history {
  width: 100%;
  padding: 0rem 0rem;
  padding-top: 2rem;
  height: fit-content;
  background-color: #242424;
  display: flex;
  flex-wrap: wrap;
  justify-self: center;
  align-items: center;
}

#history #cv {
  margin: 0 auto;
  margin-bottom: 4rem;
}

/* History */
.history-container {
  padding: 0rem 2rem;
  margin: 0 auto;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 80%;
}

.history-container .experience {
  padding: 0em 1em;
  border-bottom: solid 4px var(--primary-color);
}

.timeline {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  list-style: none;
  padding: 0;
  text-align: left;
  min-width: 50%;
  width: fit-content;
}

.timeline li {
  padding-left: 1rem;
  margin: 2rem 0rem;
  background-color: #202020;
  border-radius: 16px;
  padding: 1rem;
  border: solid #333 2px;
  box-shadow: 0px 0px 1.5rem rgba(0, 0, 0, 0.5);
  cursor: pointer;
  transition: all ease 0.3s;
  min-height: 18rem;
  min-width: 300px;
  width: 100%;
}

.timeline li:hover {
  box-shadow: 0px 0px 2rem rgba(0, 0, 0, 0.25);
  border: solid var(--primary-color) 2px;
  background-color: rgb(95, 27, 55);
  transform: scale(1.05);
}

.timeline li:hover a {
  color: white;
}

.timeline li .header {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.timeline li img {
  margin-right: 1rem;
  width: 4rem;
  border-radius: 16px;
}

.timeline li .header .title {
  display: flex;
  flex-direction: column;
  align-items: start;
  justify-content: center;
}

.timeline li .header h1 {
  font-size: 2.3rem;
}

.timeline li .header h2 {
  font-size: 1.25rem;
}

.timeline li #date {
  font-size: 1.25rem;
}

.timeline li #description {
  font-size: 0.9rem;
  color: #DDD;
}

/* Skills */
#skills {
  padding: 3rem 2rem;
  width: 80%;
  margin: 0 auto;
  text-align: center;
}
.skills {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
  gap: 1rem;
  margin: 2rem;
}

.skill {
  padding: 0.75rem 1.25rem;
  background: #242424;
  border-radius: 20px;
  font-weight: bold;
  width: 100px;
  height: 100px;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0px 0px 5rem rgba(0, 0, 0, 0.5);
   border: solid transparent 2px;
  z-index: 2;
}

.skill:hover {
  box-shadow: 0px 0px 2rem rgba(0, 0, 0, 0.25);
  border: solid var(--primary-color) 2px;
  background-color: rgb(95, 27, 55);
  transform: scale(1.05);
}

.skill img {
  width: 90%;
  object-fit: cover;
}

#skills p {
  margin: 1rem;
  font-size: 1rem;
  color: #AAA;
}

#companies{
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 3rem;
    /* space between companies */
    background-color: #111;
    box-shadow: inset 0px 0px 25px rgba(0, 0, 0, 0.35);
}

#open-video-lightbox {
  height: 4rem !important;
  width: 15rem !important;
}

</style>