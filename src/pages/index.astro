  "Blender Artist",
  "Maya Artist",
  "Technical Director",
  "Rigging TD",
  "Pipeline TD",
  "FX TD",
  "Rendering TD",
  "Unreal Engine TD",
  "Technical Artist",
  "Generalist Artist",
  "3D Artist",
  "VFX Artist",
  "CFX Artist",
