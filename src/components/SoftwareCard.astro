---
const {
    title = "Logo",
    img = "/images/common/placeholder.jpg",
    url = "#",
} = Astro.props;
---

<a href={url} class="software-card" target="_blank">
    <img src={img} alt={title} />
</a>
<style>
    .software-card {
        padding: 0.75rem 1.25rem;
        background: #242424;
        border-radius: 20px;
        font-weight: bold;
        width: clamp(1rem, 18vw, 4rem);
        height: clamp(1rem, 22vw, 5rem);
        display: flex;
        justify-content: center;
        align-items: center;
        box-shadow: 0px 0px 5rem rgba(0, 0, 0, 0.5);
        border: solid transparent 2px;
        z-index: 2;
    }

    .software-card:hover {
        box-shadow: 0px 0px 2rem rgba(0, 0, 0, 0.25);
        border: solid var(--primary-color) 2px;
        background-color: rgb(95, 27, 55);
        transform: scale(1.05);
    }

    .software-card p {
        margin: 1rem;
        font-size: 1rem;
        color: #aaa;
    }

    .software-card img {
        width: 90%;
        object-fit: cover;
    }
</style>
