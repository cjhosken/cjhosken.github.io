---


const {title="Logo", img="/images/common/placeholder.jpg", url = '#'} = Astro.props
---

<a href={url} class="software-card" target="_blank">
    <p>{title}</p>
    <img src={img} alt={title}>
</a>
<style>
    .software-card {
        width: 120px;
        max-width: 30%;
        aspect-ratio: 1;
        margin: 15px;
        padding: 10px;
        border-radius: 10px;
        box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.1);
        display: flex;
        justify-content: center;
        align-items: center;
        transition: box-shadow 0.35s, transform 0.35s;
        color: white;
        background-color: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.1);
    }

    .software-card:hover {
        transform: scale(110%);
        box-shadow: 0px 0px 50px rgba(0, 0, 0, 0.05);
    }

    .software-card p {
        opacity: 0.0;
        font-size: 90%;
        aspect-ratio: 1;
        border-radius: 10%;
        text-align: center;
        background-color: var(--light-100);
        position: absolute;
        display: flex;
        align-items: center;
        flex-direction: column;
        justify-content: center;
        transition: opacity 0.5s;
        color: var(--dark-100);
    }

    .software-card:hover p {
        opacity: 1.0;
    }

    .software-card img {
        width: 70%;
        transition: opacity 0.5s;
    }

    .software-card:hover img {
        opacity: 0.0;
    }

    @media (max-width: 768px) {
        .software-card {
            width: 80px;
        }
    }
</style>