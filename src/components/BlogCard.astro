---
// src/components/BlogCard.astro
import type { MarkdownInstance } from 'astro';

interface Props {
  post: {
    title: string;
    date: Date;
    excerpt?: string;
    image?: string;
    tags?: string[];
    slug: string;
    body: string;
  };
}

const { post } = Astro.props;

// Extract first image from markdown if no featured image
let firstImage = '';
if (!post.image) {
  const imgMatch = post.body.match(/!\[.*?\]\((.*?)\)/);
  if (imgMatch) firstImage = imgMatch[1];
}
---

<article class="blog-card">
  <a href={`/blog/${post.slug}`} class="card-link">
    {(post.image || firstImage) && (
      <div class="card-image-wrapper">
        <img
          src={post.image || firstImage}
          alt={post.title}
          width="400"
          height="225"
          class="card-image"
          loading="lazy"
        />
      </div>
    )}
    <div class="card-content">
      <h3 class="card-title">{post.title}</h3>
      <div class="card-meta">
        <time datetime={post.date.toISOString()} class="card-date">
          {post.date.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
        </time>
        {post.tags?.length > 0 && (
          <ul class="card-tags">
            {post.tags.slice(0, 2).map(tag => (
              <li class="tag">{tag}</li>
            ))}
            {post.tags.length > 2 && <li class="tag-more">+{post.tags.length - 2}</li>}
          </ul>
        )}
      </div>
      {post.excerpt && <p class="card-excerpt">{post.excerpt}</p>}
      <div class="card-hover-content">
        <span class="read-more">Read More â†’</span>
      </div>
    </div>
  </a>
</article>

<style>
  /* Add your card styles from previous example */
  /* Consider adding these enhancements: */
  .card-tags {
    display: flex;
    gap: 0.5rem;
    list-style: none;
    padding: 0;
    margin: 0;
    flex-wrap: wrap;
  }

  .tag {
    background: var(--tag-bg, #f1f5f9);
    color: var(--tag-text, #64748b);
    padding: 0.25rem 0.5rem;
    border-radius: 9999px;
    font-size: 0.75rem;
  }

  .tag-more {
    color: var(--tag-more, #94a3b8);
    font-size: 0.75rem;
    display: flex;
    align-items: center;
  }
</style>