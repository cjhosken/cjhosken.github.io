---
import { Icon } from 'astro-icon/components'
---

<div id="lightbox" class="hidden">
    <button id="close-lightbox"><Icon name="mdi:close"/></button>
    <iframe 
        id="vimeo-player" 
        src="https://player.vimeo.com/video/1041742649?badge=0&autopause=0&player_id=0&app_id=58479" 
        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
        allowfullscreen 
        data-ready="true">
    </iframe>
</div>
<style is:global>
    #lightbox {
        top: 0;
        z-index: 1000;
        position: fixed;
        height: 100vh;
        width: 100vw;
        display: flex;
        background-color: rgba(0, 0, 0, 0.9);
        backdrop-filter: blur(5px);
        align-items: center;
        justify-content: center;
    }

    #lightbox.hidden {
        display: none;
    }

    body.no-scroll {
        overflow-y: hidden;
    }

    #lightbox button {
        position: fixed;
        right: 2em;
        top: 2em;
        border: none;
        background-color: transparent;
        color: white;
        font-size: 2em;
    }

    #lightbox button:hover {
        cursor: pointer;
        color: var(--primary);
    }

    #lightbox iframe {
        width: 80vw;
        height: 80vh;
        border: none;
    }
</style>
